
@{
    ViewBag.Title = "CreateBlog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <h2>CreateBlog</h2>
        <form>
            <div class="form-group">
                <label for="AuthorInput">Author</label>
                <input type="text" class="form-control" id="AuthorInput" placeholder="Enter Author Name">
            </div>
            <div class="form-group">
                <label for="TitleInput">Title</label>
                <input type="text" class="form-control" id="TitleInput" placeholder="Enter Title">
            </div>
            <div class="form-group">

                <label for="body_Text">Body</label>
                <textarea class="form-control" id="body_Text" placeholder="Enter the blog body"></textarea>

            </div>
            <button type="submit" class="btn btn-primary" id="btn_submit">Submit</button>
        </form>
    </div>
</div>

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            var title = "";
            var author = "";
            var created = "";
            var body = "";
            /*
            if ($("#btn_submit").click) {
                console.log("yes");
                //title = $("#TitleInput").text();
                console.log(title);
            }
            */
            $('#btn_submit').click(function () {
                title = $("#TitleInput").val();
                console.log(title);
                author = $("#AuthorInput").val();
                console.log(author);
                body = $("#body_Text").val();
                
                
                created = new Date($.now());


                 $.ajax({
                contentType: 'application/json',
                type: "POST",
                     url: "/api/PostBlog",
                     data: JSON.stringify({
                         "author": author,
                         "created": created,
                        "title": title,
                         "body": body

                }),
                     success: function (data, textStatus, jqXHR) {
                         console.log("done posted");
                         console.log(data);
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    console.log(jqXHR);
                    console.log("Error");
                }
            });



            });

        });


    </script>

    }
